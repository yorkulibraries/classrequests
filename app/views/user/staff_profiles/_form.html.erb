<div class='card'>
  <div class='card-body'>
    <p class='small lead text-secondary'><%= t(:fields_marked_are_mandatory) %></p>

    <%= simple_form_for([:user, @staff_profile]) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class='form-inputs'>
        <div class='mt-3'>
          <%= f.input :specializtion_job_title %>
        </div>
        <div class='mt-3'>
          <%= f.input :profile_bio %>
        </div>
        <div class='mt-3'>
        </div>
        <div class='mt-3'>
          <%= f.input :role, collection: StaffProfile.roles, label_method: :first,
                        value_method: :first, include_blank: false,
                        selected: StaffProfile::NOTSET, input_html: {autocomplete: 'off'} %>
                        <!-- ,as: :hidden -->
        </div>
        <div class='mt-3'>
          <%= f.association :department %>
        </div>
        <div class='mt-3'>
          <%= f.association :user %>
        </div>
        <div class='mt-3'>
          <%= f.input :is_approved %>
        </div>
      </div>

      <div class='form-actions'>
        <%= f.button :submit %>
      </div>
    <% end %>
  <br/>
  </div> <!-- card body close -->
</div> <!-- card close -->
