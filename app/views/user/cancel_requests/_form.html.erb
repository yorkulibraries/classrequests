<div class='row'>
  <div class='col-md-8 col-sm-12 card '>
    <%= simple_form_for([:user, @cancel_request], html: {class: ''}) do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class='card-body'>
        <p class='small lead text-secondary'><%= t(:fields_marked_are_mandatory) %></p>
        <h4 class='card-title text-primary'><%= t(:teaching_request_cancellation_request) %></h4>
        <hr class='w-50 ml-0' />

        <div class='row mt-3'>
          <p class='text-muted'> <%= t(:teaching_request) %>:<br/>
          <span class='text-dark fw-bold'><%= @teaching_request.full_name %></span></p>
        </div>
        <div class='row mt-3'>
            <div class='col-sm-12 col-md-6'><%= f.input :reason, as: :text, label_html: {class: 'fw-bold'}  %></div>
        </div>

        <div class='row mt-3'>
          <%= f.input :teaching_request_id, input_html: {value: @teaching_request.id}, as: :hidden  %>
          <%= f.input :user_id, input_html: {value: current_user.id}, as: :hidden  %>
        </div>

        <div class='row mt-3'>
          <div class='col-md-4'><%= f.button :submit, data: {confirm: 'Are you sure you want to cancel?'}, class: 'btn btn-success' do %>
              <%= t(:submit_my_cancel_request) %>
              <i class='fa fa-arrow-right'></i>
          <% end %>
          </div>
          <div class='col-md-8 text-md-end'>
            <%= link_to t(:go_back, scope: :button), operators_index_path, class:'btn btn-outline-danger text-md-end' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
