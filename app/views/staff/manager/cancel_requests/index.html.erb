        <th><%= t(:response) %></th>
        <th><%= t(:comment) %></th>
      </tr>
    </thead>
    <tbody>
      <% @cancel_requests.each do |cancel_request| %>
        <%= content_tag :tr, id: dom_id(cancel_request), class: dom_class(cancel_request) do %>
          <td><%= cancel_request.user.name %></td>
