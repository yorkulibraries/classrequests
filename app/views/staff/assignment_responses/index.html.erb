<div class='row'>
  <div class='col-sm-12 col-md-12'>
    <% page_title t(:assignments) %>
    <h1><%= t(:assignment_responses_for) %>: <span class='small text-muted'><%= @teaching_request.name %></span></h1>
    <hr class='primary'/>
  </div>
</div>
<div class='btn-toolbar justify-content-left' role='toolbar' aria-label='Toolbar with button groups'>
  <div class='btn-group me-2' role='group' aria-label='First group'>
    <%= link_to staff_manager_teaching_requests_path(), class: 'btn btn-sm btn-info' do %>
      <span class='fas fa-hand-point-left'></span> <%= t(:return_to_manager_dashboard) %>
    <% end %>
  </div>
</div>
<div class='table-responsive bg-light p-4 mt-3'>
  <table class='table table-striped table-bordered table-hover'>
    <thead>
      <tr>
        <th><%= t(:by) %></th>
        <th><%= t(:request) %></th>
        <th><%= t(:response) %></th>
        <th><%= t(:comment) %></th>
      </tr>
    </thead>
    <tbody>
      <% @assignment_responses.each do |assignment| %>
        <%= content_tag :tr, id: dom_id(assignment), class: dom_class(assignment) do %>
          <td><%= assignment.user.name %></td>
          <td><%= assignment.teaching_request.name %></td>
          <td><%= assignment.response %></td>
          <td><%= assignment.comment_or_reason %></td>
          <!-- <td>
            <%= link_to staff_teaching_request_assignment_response_path(assignment.teaching_request, assignment) , class: 'btn btn-sm btn-info' do %>
              <i class='fas fa-eye'></i>
            <% end %>
          </td> -->
          <!-- <td><%= link_to '#', class: 'btn btn-sm btn-info' do %>
            <i class='fas fa-edit'></i>
          <% end %></td> -->
          <!-- <td><%= link_to [:staff, assignment.teaching_request, assignment], method: :delete,
              data: { confirm: 'Are you sure?', toggle: 'tooltip', title: 'delete' },
              class: 'btn text-white btn-danger'  do %>
                <i class='fas fa-times-circle'></i> <%= t(:delete) %>
          </td> -->
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
