<div class='card w-90'>
  <%= simple_form_for([:staff, @staff_profile], html: { class: 'form-horizontal' }, wrapper: :horizontal_form) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class='card-body'>
      <div class='row mt-3 b-1'>
        <p class='mb-0'>
          <span class='text-muted'><%= t(:editing_profile_of) %></span>:
          <span class='fw-bold'><%= @staff_profile.user.name %></span>
        </p>
        <p>
          <span class='text-muted'><%= t(:has_a_role_of) %>:</span>
          <span class='fw-bold'><%= @staff_profile.role.text %>
        </p>
      </div>
      <p class='small lead text-secondary'><%= t(:fields_marked_are_mandatory) %></p>
      <div class='row mt-3'>
        <%= f.input :specializtion_job_title %>
      </div>
      <div class='row mt-3'>
        <%= f.input :profile_bio %>
      </div>
      <div class='row mt-3'>
        <%= f.association :department %>
      </div>
      <%= f.association :user, readonly: true, as: :hidden %>
      <%= f.input :is_approved, readonly: true, as: :hidden %>
      <%= f.input :role, readonly: true, as: :hidden %>
    </div>
    <div class='card-footer'>
      <%= f.button :submit, class: 'btn btn-success' %>
      <%= link_to 'Cancel', staff_staff_profile_path(@staff_profile), class: 'btn btn-danger' %>
    </div>
  <% end %>
</div>
