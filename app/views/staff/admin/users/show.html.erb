<div class="card bg-light p-4">
<div class='row'>
  <div class='col'>
    <% page_title t(:users_list) %>
    <%= content_tag :h1, yield(:page_title) %>
    <hr class="primary"/>
  </div>
</div>
  <div class="card-body w-75">
    <h3>Account Fields</h3>
    <div class="table-responsive mt-3 mb-3">
      <table class="table table-striped">
        <tr><td><%= t(:name) %></td><td><%= @user.name %></td></tr>

        <% for attribute in @user.attributes.keys %>
        <tr>
          <td><%= attribute.humanize %></td>
          <td><%= @user.attributes[attribute].to_s %></td>
        </tr>
        <% end %>
      </table>
    </div>

    <% if @user.staff_profile %>
      <h3>User Staff Profile Fields</h3>
      <div class="table-responsive mt-3 mb-3">
        <table class="table table-striped">
          <% for nested_attribute in @user.staff_profile.attributes.keys %>
          <tr>
            <td><%= nested_attribute.humanize %></td>
            <td><%= @user.staff_profile.attributes[nested_attribute].to_s %></td>
          </tr>
          <% end %>
        </table>
      </div>
    <% end %>


  </div>
  <div class="card-footer">
    <div class="btn-toolbar justify-content-left" role="toolbar" aria-label="Toolbar with button groups">
      <div class="btn-group me-2" role="group" aria-label="First group">
        <%= link_to staff_admin_users_path(), class: 'btn btn-sm btn-info' do %>
          <span class="fas fa-hand-point-left"></span> <%= t(:return_to_all_users) %>
        <% end %>
        <%= link_to edit_staff_admin_user_path(@user), class: 'btn btn-sm btn-primary' do %>
          <%= t(:edit) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
