<div class="row">
  <div class="col-sm-12 col-md-6">
    <% page_title t(:type_of_instructions) %>
    <h1><%= t(:type_of_instructions_list) %></h1>
    <hr class="primary"/>
  </div>

  <div class="col-sm-12 col-md-6 text-end">
  <%= link_to new_staff_admin_type_of_instruction_path, class: 'btn btn-primary' do %>
    <%= t(:add_new_instruction_type) %>
  <% end %>
  </div>
</div>
<div class="table-responsive bg-light p-2">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
      
          <th>Name</th>
      

              
        </tr>
      </thead>

      <tbody>
        
         <% @type_of_instructions.each do |type_of_instruction| %>
          <%= content_tag :tr, id: dom_id(type_of_instruction), class: dom_class(type_of_instruction) do %>

          <td><%= link_to type_of_instruction.name, staff_admin_type_of_instruction_path(type_of_instruction) %></td>
          <td>
            <%= link_to staff_admin_type_of_instruction_path(type_of_instruction) , class: "btn btn-sm btn-info" do %>
              <i class='fas fa-eye'></i>
            <% end %>
          </td>
          <td><%= link_to edit_staff_admin_type_of_instruction_path(type_of_instruction), class: "btn btn-sm btn-info" do %>
            <i class='fas fa-edit'></i>
          <% end %></td>
          <td><%= link_to [:staff, :admin, type_of_instruction], method: :delete,
              data: { confirm: 'Are you sure?', toggle: "tooltip", title: 'delete' },
              class: 'btn text-white btn-danger'  do %>
                <i class="fas fa-times-circle"></i> <%= t(:delete) %>
          </td>
          <% end %>
        <% end %>
      <% end %>

      </tbody>
    </table>
  </div>
</div>