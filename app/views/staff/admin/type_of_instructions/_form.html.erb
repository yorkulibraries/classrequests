<%= simple_form_for([:staff, :admin, @type_of_instruction]) do |f| %>
<%# simple_form_for([:staff, :admin, @department]) %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
  </div>
  <hr/>
  <div class="form-group">
    <% if type_of_instruction.persisted? %>
      <div class="float-right">
        <%= link_to 'Destroy', [:staff, :admin, type_of_instruction], method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <div class="form-actions card-footer">
      <%= f.button :submit, class: "btn btn-success" %>
      <%= link_to "Cancel", staff_admin_type_of_instructions_path, class: "btn btn-danger" %>
    </div>

    <% if type_of_instruction.persisted? %>
      <%= link_to "Cancel", staff_admin_type_of_instruction_path(type_of_instruction), class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", staff_admin_type_of_instructions_path, class: "btn btn-link" %>
    <% end %>
  </div>

<% end %>