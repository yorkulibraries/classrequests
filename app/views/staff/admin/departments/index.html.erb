<div class="row">
  <div class="col-sm-12 col-md-6">
    <% page_title t(:departments) %>
    <h1><%= t(:departments_list) %></h1>
    <hr class="primary"/>
  </div>

  <div class="col-sm-12 col-md-6 text-end">
  <%= link_to new_staff_admin_department_path, class: 'btn btn-success' do %>
    <%= t(:add_new_department) %>
  <% end %>
  </div>
</div>
<!--
t.string "name"
t.string "branch_division"
t.datetime "created_at", precision: 6, null: false
t.datetime "updated_at", precision: 6, null: false
end -->
<div class="table-responsive bg-light p-4">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t(:department_name) %></th>
        <th><%= t(:department_branch_division) %></th>
      </tr>
    </thead>
    <tbody>
      <% @departments.each do |department| %>
        <%= content_tag :tr, id: dom_id(department), class: dom_class(department) do %>
          <td><%= department.name %></td>
          <td><%= department.branch_division %></td>
          <td>
            <%= link_to staff_admin_department_path(department) , class: "btn btn-sm btn-info" do %>
              <i class='fas fa-eye'></i>
            <% end %>
          </td>
          <td><%= link_to edit_staff_admin_department_path(department), class: "btn btn-sm btn-info" do %>
            <i class='fas fa-edit'></i>
          <% end %></td>
          <td><%= link_to [:staff, :admin, department], method: :delete,
              data: { confirm: 'Are you sure?', toggle: "tooltip", title: 'delete' },
              class: 'btn text-white btn-danger'  do %>
                <i class="fas fa-times-circle"></i> <%= t(:delete) %>
          </td>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
