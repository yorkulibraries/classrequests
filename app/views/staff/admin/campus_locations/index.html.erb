
<div class="row">
  <div class="col-sm-12 col-md-6">
    <% page_title t(:campus_locations) %>
    <h1><%= t(:campus_locations_list) %></h1>
    <hr class="primary"/>
  </div>

  <div class="col-sm-12 col-md-6 text-end">
  <%= link_to new_staff_admin_campus_location_path, class: 'btn btn-success' do %>
    <%= t(:add_new_campus) %>
  <% end %>
  </div>
</div>

<div class="table-responsive bg-light p-4">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th><%= t(:campus_location_name) %></th>
        <th><%= t(:campus_location_address) %></th>
      </tr>
    </thead>
  <tbody>
      <% @campus_locations.each do |campus_location| %>
        <%= content_tag :tr, id: dom_id(campus_location), class: dom_class(campus_location) do %>
          <td><%= campus_location.name %></td>
          <td><%= campus_location.address %></td>
          <td>
            <%= link_to staff_admin_campus_location_path(campus_location) , class: "btn btn-sm btn-info" do %>
              <i class='fas fa-eye'></i>
            <% end %>
          </td>
          <td><%= link_to edit_staff_admin_campus_location_path(campus_location), class: "btn btn-sm btn-info" do %>
            <i class='fas fa-edit'></i>
          <% end %></td>
          <td><%= link_to [:staff, :admin, campus_location], method: :delete,
              data: { confirm: 'Are you sure?', toggle: "tooltip", title: 'delete' },
              class: 'btn text-white btn-danger'  do %>
                <i class="fas fa-times-circle"></i> <%= t(:delete) %>
          </td>
          <% end %>
        <% end %>
      <% end %>
    </tbody>
</table>
</div>
<br>
