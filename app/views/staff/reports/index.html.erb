<div class='row'>
  <div class='col'>
    <% page_title t(:my_reports_dashboard) %>
    <h1><%= t(:my_reports_dashboard) %></h1>
    <hr class='primary'/>
  </div>
</div>

<div class='row mt-3'>
  <div class='col-sm-12 col-md-6'>
    <div class='card mb-3 shadow p-4 rounded'>
      <div class='card-title'>
        <h2><%= t(:my_teachings_by_date) %></h2>
        <hr class='primary' />
      </div>
      <div class='card-body p-0'>
        <%= render partial: 'staff/reports/teachings_by_date_ranges/form' %>
      </div>
    </div>
  </div>
  <div class='col-sm-12 col-md-6'>
    <div class='card mb-3 shadow p-4 rounded'>
      <div class='card-title'>
        <h2><%= t(:my_teachings_quick_report) %></h2>
        <hr class='primary' />
      </div>
      <div class='card-body p-0 mb-3'>
        <div class='table-responsive'>
          <table class='table table-striped table-sm align-middle text-center'>
            <!-- <caption><%= t(:quick_stats_of_teachings) %></caption> -->
            <thead class='table-primary'>
              <tr>
                <th scope='col'><%= t(:teachings) %></th>
                <th scope='col'><%= t(:assigned_or_done) %></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= t(:last_month) %></td>
                <td><%= @teachings_last_month %></td>
              </tr>
              <tr>
                <td><%= t(:this_month) %></td>
                <td><%= @teachings_this_month %></td>
              </tr>
              <tr>
                <td><%= t(:this_year) %></td>
                <td><%= @teachings_this_year %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
