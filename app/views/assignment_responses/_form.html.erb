<%= simple_form_for(@assignment_response) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class='form-inputs'>
    <%= f.input :response %>
    <%= f.input :comment_or_reason %>
    <%= f.association :teaching_request %>
    <%= f.association :user %>
  </div>
  <hr/>
  <div class='form-group'>
    <% if assignment_response.persisted? %>
      <div class='float-right'>
        <%= link_to 'Destroy', assignment_response, method: :delete, class: 'text-danger', data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if assignment_response.persisted? %>
      <%= link_to 'Cancel', assignment_response, class: 'btn btn-link' %>
    <% else %>
      <%= link_to 'Cancel', assignment_responses_path, class: 'btn btn-link' %>
    <% end %>
  </div>

<% end %>
