<div class='card bg-white w-75 m-auto p-4'>

  <div class='card-body'>
    <div class='card-title mb-3'><h1 class='text-center'>Sign Up</h1></div>

    <div class='row'>
      <div class='col-lg-6 col-md-6 ms-auto me-auto'>


        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render partial: 'devise/shared/error_messages', resource: resource %>

          <div class='form-group mb-3'>
            <%= f.text_field :username, class: 'form-control', placeholder: 'Username' %>
          </div>

          <div class='form-group mb-3'>
            <%= f.select(:user_group, ['Staff', 'Faculty', 'Undergraduate', 'Graduate', 'Other'], {}, {class: 'form-select'}) %>
          </div>

          <div class='form-group mb-3'>
            <%= f.select(:iam_identification, ['YorkU Instructor', 'Teaching Assistant', 'Librarian | Archivist | Staff', 'Other'], {}, {class: 'form-select'}) %>
          </div>

          <div class='form-group mb-3'>
            <%= f.email_field :email, autofocus: false, class: 'form-control', placeholder: 'Email Address' %>
          </div>

          <div class='form-group mb-3'>
            <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password' %>
          </div>

          <div class='form-group mb-3'>
            <%= f.password_field :password_confirmation, autocomplete: 'off', class: 'form-control', placeholder: 'Confirm Password' %>
          </div>

          <div class='form-group mb-3'>
            <%= f.text_field :first_name,  class: 'form-control', placeholder: 'First Name' %>
          </div>

          <div class='form-group mb-3'>
            <%= f.text_field :last_name,  class: 'form-control', placeholder: 'Last Name' %>
          </div>

          <div class='form-group mb-3'>
            <%= f.text_field :contact_phone,  class: 'form-control', placeholder: 'Phone' %>
          </div>

          <div class='form-group mb-3'>
            <%= f.email_field :alternate_email,  class: 'form-control', placeholder: 'Alternate Email' %>
          </div>

          <div class='form-group mb-3'>
            <%= f.submit 'Sign up', class: 'btn btn-primary btn-block btn-lg' %>
          </div>
        <% end %>

        <div class='text-center mb-3'>
          <%= render 'devise/shared/links' %>
        </div>
      </div>
    </div>
  </div>
</div>
