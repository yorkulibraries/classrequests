<!DOCTYPE html>
<html>
  <head>
    <%= render 'shared/head' %>
  </head>

  <body>
    <div class='d-flex' id='wrapper'>

      <!-- Page Content -->
      <div id='page-content-wrapper' class='d-flex flex-column h-100'>
        <% if @access == 'staff' %>
          <%= render 'staff/navbar' %>
        <% elsif @access == 'manager' || @access == 'admin' %>
          <%= render 'staff/manager/navbar' %>
        <% elsif @access == 'user'%>
          <%= render 'shared/user_navbar' %>
        <% else %>
          <%= render 'shared/public_navbar' %>
        <% end %>
        <div class='container-fluid p-4'>
          <%= render 'shared/notices' %>
          <%= yield %>
        </div>
        <footer id='sticky-footer' class='footer bg-dark text-white py-2'>
          <div class='container px-md-0'>
            <%= render 'shared/footer' %>
          </div>
        </footer>
      </div>
      <!-- /#page-content-wrapper -->
    </div>
    <!-- /#wrapper -->

  </body>
</html>
